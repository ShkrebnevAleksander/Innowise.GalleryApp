<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gallery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Gallery.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="Black"
    Shell.TabBarTitleColor="White">

    <TabBar>
        <ShellContent
            Title="Gallery"
            Icon="icon_home.png"

            ContentTemplate="{DataTemplate views:GalleryPage}"
            Route="GalleryPage"/>

        <ShellContent
            Title="Favorites"
            Icon="icon_heart.png"
            ContentTemplate="{DataTemplate views:FavoritesPage}"
            Route="FavoritesPage"/>
    </TabBar>

</Shell>